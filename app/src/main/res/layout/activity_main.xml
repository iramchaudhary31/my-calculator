<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414343"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_showNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#838383"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tr_1">

            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="AC"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buClean"
                android:background="#C8C9CB"
                android:id="@+id/btn_ac"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+/-"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_plus_minus"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="%"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buPercent"
                android:background="#C8C9CB"
                android:id="@+id/btn_modulas"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="/"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buOptionEvent"
                android:textColor="#FFFFFF"
                android:background="#F99013"
                android:id="@+id/btn_divide"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tr_2">

            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="7"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_7"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="8"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_8"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="9"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_9"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="*"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buOptionEvent"
                android:textColor="#FFFFFF"
                android:background="#F99013"
                android:id="@+id/btn_multiply"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/tr_3">

            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="4"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_4"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="5"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_5"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="6"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_6"/>

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#F99013"
                android:onClick="buOptionEvent"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tr_4">

            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_1"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="2"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_2"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="3"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buNumberEvent"
                android:background="#C8C9CB"
                android:id="@+id/btn_3"/>
            <Button
                android:layout_marginRight="1pt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="buOptionEvent"
                android:textColor="#FFFFFF"
                android:background="#F99013"
                android:id="@+id/btn_plus"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_zero"
            android:layout_marginRight="1pt"
            android:layout_width="176dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#C8C9CB"
            android:text="0"
            android:onClick="buNumberEvent"
            android:textSize="20dp" />

        <Button
            android:layout_marginRight="1pt"
            android:layout_width="71dp"
            android:layout_height="70dp"
            android:text="."
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="buNumberEvent"
            android:background="#C8C9CB"
            android:id="@+id/btn_dot"/>

        <Button
            android:layout_marginRight="1pt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="#F99013"
            android:onClick="buEqualEvent"
            android:id="@+id/btn_equalto" />
    </LinearLayout>

</LinearLayout>